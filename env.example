# ───────────────
# Server basics
# ───────────────
CORS_ORIGINS=*
HOST=0.0.0.0
PORT=3000

# ───────────────
# OAuth / Yandex ID
# ───────────────
YANDEX_CLIENT_ID=__PUT_LATER__
YANDEX_CLIENT_SECRET=__PUT_LATER__

# ───────────────
# PostgreSQL
# ───────────────
PGHOST=127.0.0.1
PGPORT=5432
PGDATABASE=volthome
PGUSER=volthome
PGPASSWORD=volthome_password
PGSSLMODE=disable

# ───────────────
# JWT / sessions
# ───────────────
JWT_ACCESS_SECRET=change-me-access      # секрет для access-токенов
JWT_REFRESH_SECRET=change-me-refresh    # секрет для refresh-токенов
ACCESS_TTL_MIN=30                       # срок жизни access (минуты)
REFRESH_TTL_DAYS=30                     # срок жизни refresh-сессий (дни)

# ───────────────
# Rate limiting
# ───────────────
RATE_LIMIT_DELTA_PER_MIN=60
RATE_LIMIT_BATCH_PER_MIN=30